<h1 align="center">All Alpha bloggers</h1>

<div class="center">
  <%= will_paginate %>
    <% @users.each do |user|%>
      <ul class="listing">
        <div class="row">
          <div class="col-md-4 col-md-offset-4 well">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title"><%= link_to user.username, user_path(user) %></li>
            <li><%= pluralize(user.articles.count,"article") if user.articles %> articles</li>
            <% if logged_in? && current_user.admin? %>
              <li><%= link_to "Delete user", user_path(user), method: :delete,
                      data: {confirm: "Are you sure you want to delete the user and all its articles?"}%></li>
            <% end %>
          </div>
        </div>  
      </ul>
    <% end %>
  <%= will_paginate %>
</div>