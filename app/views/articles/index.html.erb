<h1>Articles list</h1>

<p><%= link_to 'Create a new article', new_article_path %></p>
<table>
  <tr>
    <th>
      ID
    </th>
    <th>
      Title
    </th>
    <th>
      Description
    </th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.id %></td>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Show', article_path(article) %></td>
  </tr>
  <% end %>
</table>