<h2 align="center">Title: <%= @article.title%></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user.present? %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
          <li><%= pluralize(@article.user.articles.count,"article") if @article.user.articles %> articles</li>
        </div>
      </div>  
    </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <% if logged_in? and (current_user == @article.user || current_user.admin?) %>
      <%= link_to 'Edit article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to 'Delete article', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-xs btn-danger' %>
    <% end %>
    <%= link_to 'Back to articles', articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>


